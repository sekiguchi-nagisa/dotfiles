#!/usr/bin/env ydsh

git submodule update --init

let DOT_DIR = "$SCRIPT_DIR/dotfiles"

import-env HOME

for $f in $(ls -a $DOT_DIR) {
    if $f == '.' || $f == '..' { continue; }
    if $f == 'bin' {
        mkdir -p ~/bin
    }
    echo link $DOT_DIR/$f to $HOME/$f
    test -e $HOME/$f && { echo already exists; continue; }
    ln -s $DOT_DIR/$f $HOME/$f 
}
