#!/usr/bin/env arsh

git submodule update --init

let DOT_DIR = "$SCRIPT_DIR/dotfiles"

mkdir -p ~/.config|| exit $?
ln -s $DOT_DIR/.config/arsh ~/.config/

mkdir -p ~/.local/share/ydsh || exit $?
ln -s $DOT_DIR/.local/share/arsh/modules ~/.local/share/arsh/

ln -s $DOT_DIR/.vimrc ~/
ln -s $DOT_DIR/.vim ~/

mkdir -p ~/bin || exit $?
for $dir in @($DOT_DIR/bin/*) {
    ln -s $dir ~/bin/
}
