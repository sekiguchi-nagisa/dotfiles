
ls() {
    command ls ${[$OSTYPE == 'Linux' ? '--color=auto' : 
                 $OSTYPE == 'Darwin' ? '-G' : '']} $@
}

grep() {
    command grep --color=auto $@
}

la() {
    ls -la $@
}

ll() {
    ls -ll $@
}

source edit
$HISTFILESIZE = 1024
$HISTSIZE = 1024

$PS1 = '\u@\h:\w> '


source cnf
function _cnf($s : String, $a : [String]) {
    cnf $s
}
if (command -v cnf &> /dev/null) {
    $CNF_HOOK = $_cnf
}

function _cd($s : String) {
    command cd $s
    la
}
$ISDIR_HOOK = $_cd



function _prompt($s : String) : String {
    return "$(powerline-go -error $? -shell bash -condensed -colorize-hostname)"
}

if (command -v powerline-go &>  /dev/null) {
    $PROMPT_HOOK = $_prompt
    set_env LC_CTYPE="en_US.UTF-8" # for East Asian Ambiguous width character
}
