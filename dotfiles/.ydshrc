
ls() {
    command ls ${$OSTYPE == 'Linux' ? '--color=auto' : 
                 $OSTYPE == 'Darwin' ? '-G' : ''} $@
}

grep() {
    command grep --color=auto $@
}

la() {
    ls -la $@
}

ll() {
    ls -ll $@
}

source edit

$PS1 = '\u@\h:\w> '


source cnf
function _cnf($s : String, $a : [String]) {
    cnf $s
}
if (command -v cnf &> /dev/null) {
    $CNF_HOOK = $_cnf
}

function _cd($s : String) {
    command cd $s
    la
}
$ISDIR_HOOK = $_cd



function _prompt($s : String) : String {
    var ret = "$(powerline-go -error $? -shell bash -condensed -colorize-hostname)"
    return $ret :- $PS1
}

if (command -v powerline-go &>  /dev/null) {
    $PROMPT_HOOK = $_prompt
}

source path

fd() {
    command -v fzf &> /dev/null || return 1;
    command -v find &> /dev/null || return 1;
    var p = $1 :- "."

    var dir = "$(find $p -path '*/\.*' -prune \
                  -o  -print 2> /dev/null | fzf +m -1)"
    if !(test -d $dir) {
        $dir = $dirname($dir)
    }
    $dir.empty() || cd $dir
}

function _inter($s : Signal) {
    throw new SystemError("${$s.message()}")
}
$SIG[%'int'] = $_inter
