$PS1 = '\u@\h:\w> '

ls() {
    command ls ${[$OSTYPE == 'Linux' ? '--color=auto' : 
                 $OSTYPE == 'Darwin' ? '-G' : '']} $@
}

grep() {
    command grep --color=auto $@
}

la() {
    ls -la $@
}

ll() {
    ls -ll $@
}

source history
$HISTFILESIZE = 1024u
$HISTSIZE = 1024u

source cnf
